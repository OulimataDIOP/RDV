		<div class="row">
        {% for prestation in prestations %}
        <div class="col s4 card-bloc">
			<div class="card card-prestation " style="background : url({{ asset("images/imagesUpload/" ~ prestation.image ) }}) no-repeat center fixed; background-size: cover;">
			<a class="btn-floating teal right"><i class="material-icons">event</i></a>
			<div class="opacity-filtre">
				<div class="card-content white-text center" >
					<img src="{{ asset("images/imagesUpload/" ~ prestation.image ) }}" alt="" class="img-prestation" id="img-prestation">
				</div>
			</div>
				<div class="card-description">
					<span class="card-title titre-prestation">{{prestation.titre}}
					<p class="prestation-prix right">{{ prestation.prix }} â‚¬</p>
					</span>
					<a href="path('details')">{{ prestation.description|slice(0, 4) }}...<br>En savoir plus</a>
                </div>
    
		</div>
    </div>
	{% else %}
		<tr>
			<td colspan="6">Il n'y a pas de prestations pour l'instant</td>
		</tr>
    {% endfor %}
</div>
</div>
